# Configuration de base de données
DATABASE_URL="postgresql://user:password@host:port/database"

# NextAuth v5 - Secrets d'authentification
# OBLIGATOIRE en développement ET production
AUTH_SECRET="votre-secret-genere-avec-openssl-rand-base64-32"

# OBLIGATOIRE uniquement en production (athlink.fr)
# En preview Replit, cette variable est auto-détectée
AUTH_URL="https://athlink.fr"

# NOTE: trustHost est déjà configuré dans lib/auth.ts
# Pas besoin de variable d'environnement AUTH_TRUST_HOST

# Supabase (stockage fichiers)
NEXT_PUBLIC_SUPABASE_URL="https://votre-projet.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="votre-cle-anon-publique"

# Stripe (paiements)
STRIPE_SECRET_KEY="sk_live_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Google OAuth (optionnel)
GOOGLE_CLIENT_ID="votre-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="votre-secret"
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED="false"

# Configuration application
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://athlink.fr"
